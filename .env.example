# .env.example for PRACER
# Example environment variables file. Replace placeholders with actual values.

#Local
NEXT_PUBLIC_APP_URL="http://localhost:3001"

#Supabase
NEXT_PUBLIC_SUPABASE_URL="<SUPABASE_URL>"
NEXT_PUBLIC_SUPABASE_ANON_KEY="<SUPABASE_ANON_KEY>"
SUPABASE_SERVICE_ROLE_KEY="<SUPABASE_SERVICE_ROLE_KEY>"
SUPABASE_SLUG_ID="<SUPABASE_SLUG_ID>"
SUPABASE_PROJECT_ID="<SUPABASE_PROJECT_ID>"

#Google
GOOGLE_CLIENT_ID="<GOOGLE_CLIENT_ID>"
GOOGLE_CLIENT_SECRET="<GOOGLE_CLIENT_SECRET>"

#Stripe
STRIPE_ACCT_ID="<STRIPE_ACCT_ID>"
STRIPE_SECRET_KEY="<STRIPE_SECRET_KEY>"
STRIPE_PUBLIC_KEY="<STRIPE_PUBLIC_KEY>"

#Strava
STRAVA_CLIENT_ID="<STRAVA_CLIENT_ID>"
STRAVA_CLIENT_SECRET="<STRAVA_CLIENT_SECRET>"

#vercel
VERCEL_PROJECT_ID="<VERCEL_PROJECT_ID>"
VERCEL_PUB_Key="<VERCEL_PUB_KEY>"

#N8N
N8N_USER="<N8N_USER>"
N8N_PASS="<N8N_PASS>"

#A
OPENAI_API_KEY_DEV="<OPENAI_API_KEY_DEV>"
OPENAI_API_KEY_PROD="<OPENAI_API_KEY_PROD>"

# Development Auto-Login (set to 'true' to enable seamless auto-login in dev mode)
NEXT_PUBLIC_ENABLE_AUTO_LOGIN="true"
NEXT_PUBLIC_AUTO_LOGIN_EMAIL="<AUTO_LOGIN_EMAIL>"
NEXT_PUBLIC_AUTO_LOGIN_PASSWORD="<AUTO_LOGIN_PASSWORD>"

# N8N Configuration for automated reporting and bug detection
# Postgres (used by n8n node and pipeline)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nuview
POSTGRES_USER=nuview_user
POSTGRES_PASSWORD="<POSTGRES_PASSWORD>"

# SMTP (for email alerts)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER="<SMTP_USER>"
SMTP_PASSWORD="<SMTP_PASSWORD>"

# Other
NODE_ENV=production
# Optional: override n8n host/port if needed
N8N_HOST=http://localhost:5678

# Guardrails for free-tier operation
MAX_ITEMS_PER_RUN=200          # Max number of opportunities processed/written per run
MAX_FIELD_LENGTH=2000          # Max characters to store in large text fields (full_analysis snippets)
SLEEP_BETWEEN_STEPS=2          # Seconds to sleep between pipeline steps to avoid bursting connections
DRY_RUN=False                  # If True, skip external writes (DB, GitHub, Slack, Email)

# NOTE: This is an example file. Do not commit real secrets to version control.
